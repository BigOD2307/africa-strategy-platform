# Africa Strategy - Variables d'environnement Backend
# Développé par Ousmane Dicko

# Application
APP_NAME=Africa Strategy
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/africa_strategy

# Redis
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=africa-strategy

# Security
SECRET_KEY=your-secret-key-change-in-production-africa-strategy-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Email (pour les notifications futures)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Monitoring (optionnel)
SENTRY_DSN=
